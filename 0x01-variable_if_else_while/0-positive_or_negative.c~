#include <stdlib.h>
#include <time.h>

/* more headers goes there */

/* betty style doc for function main goes there */
int main(void) {

/* Betty style comment: initialize random number generator */
        srand(time(0));

/* Betty style comment: generate random number */
        int n = rand() - RAND_MAX / 2;

/* Betty style comment: check if number is positive, negative, or zero */
        if (n > 0) {
                printf("%d is positive\n", n);
        } else if (n == 0) {
                printf("%d is zero\n", n);
        } else {
                printf("%d is negative\n", n);
        }

        return (0);
}
